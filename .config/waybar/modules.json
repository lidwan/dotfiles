{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 1
        }       
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1",
            "(.*) ‚Äî Mozilla Firefox": "Mozilla Firefox",
        },
        "separate-outputs": true,
        "max-length": 85,
        },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
        "on-click": "rofi -show drun -replace",
        "on-click-right": "~/.config/ml4w/scripts/keybindings.sh",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "ÔÄë",
        "tooltip-format": "Powermenu",
        "on-click": "wlogout -b 4",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // System tray
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    // System
    "custom/system": {
        "format": "Óë≥",
        "tooltip": false
    },

    // CPU
    "cpu": {
        "format": " C {usage}% ",
        "on-click": "alacritty -e btop"
    },

    // Memory
    "memory": {
        "format": "/ M {}% / ",
        "on-click": "alacritty -e btop"
    },

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "alacritty -e btop"
    }, 

    "hyprland/language": {
        "format": " {short}"
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "hyprland/language",
            "cpu",
            "memory"
        ]
    },
    "custom/updates":{
        "format": "{} Update(s)",
        "exec": "~/.config/hypr/Scripts/checkupdates.sh",
        "interval": 3600,
        "tooltip": false,
        "on-click": "alacritty -e ~/.config/hypr/Scripts/updates.sh",
        "return-type": "json",
        "on-empty": "hide" 
   },

    // "network": {
    //     	"format-ethernet": "<span foreground='#7aa2f7' font='14.5' rise='-1000'>Ôõø </span>{ipaddr}",
    //     	"format-linked": "<span foreground='#7aa2f7' font='14.5' rise='-1000'>Ôõø </span>{ifname} (No IP)"
	// },
   // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Ôûñ  {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty -e nmtui"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}   {capacity}%",
        "format-charging": "Ôóß  {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        "format-full": "FULL!",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },

